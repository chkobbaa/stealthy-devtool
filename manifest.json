{
  "manifest_version": 3,
  "name": "Stealthy Network Panel",
  "version": "1.1.0",
  "description": "DevTools-like Network panel with video detection.",
  "permissions": ["webRequest", "tabs", "storage", "debugger", "downloads", "cookies"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Stealthy Network",
    "default_popup": "popup/popup.html"
  }
}
